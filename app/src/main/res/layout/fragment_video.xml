<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/video_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/ic_user"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:focusable="true"
            android:src="@drawable/ic_user"
            android:background="@color/black"
            android:clickable="true"
            android:layout_marginStart="16dp"
            android:layout_gravity="start" />

        <ImageView
            android:id="@+id/app_name"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:src="@drawable/tech_video" />

        <TextView
            android:id="@+id/aa"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:focusable="true"
            android:text="Aa"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:clickable="true"
            android:layout_marginEnd="16dp"
            android:layout_gravity="end" />

    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_margin="15dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/toolbar"
        android:padding="10dp"
        android:inputType="text"
        android:background="@drawable/round_corner"
        android:autofillHints="Value"
        tools:ignore="LabelFor" />

    <LinearLayout
        android:id="@+id/app_name_and_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/search_bar"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:src="@drawable/app_logo" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/videos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_name_and_icon">

        <RelativeLayout
            android:id="@+id/apple_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/apple_logo"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:paddingStart="20dp"
                android:src="@drawable/apple_logo"
                tools:ignore="RtlSymmetry" />

            <HorizontalScrollView
                android:id="@+id/apple_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/apple_logo"
                tools:ignore="ScrollViewCount">

                <ImageView
                    android:id="@+id/apple_watch_series10"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/apple_watch_series10_thumbnail"/>

            </HorizontalScrollView>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>